Package: bayesSSM
Type: Package
Title: Bayesian Methods for State Space Models
Version: 0.6.1
Authors@R: c(
    person(
      "Bjarke", "Hautop",
      email = "bjarke.hautop@gmail.com",
      role = c("aut", "cre", "cph")
